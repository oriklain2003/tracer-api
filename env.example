# =============================================================================
# API Service Configuration - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# -----------------------------------------------------------------------------
# Flight Radar 24 API
# -----------------------------------------------------------------------------
FR24_API_TOKEN=your_fr24_api_token_here

# -----------------------------------------------------------------------------
# OpenAI API
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------------------------------------------
# Google Gemini API
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
# Format: postgresql://username:password@host:port/database
POSTGRES_DSN=postgresql://username:password@host:5432/database

# Optional: Individual PostgreSQL connection parameters (alternative to DSN)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password
# POSTGRES_DB=tracer

# -----------------------------------------------------------------------------
# Aviation Edge API (for scheduled flight data)
# -----------------------------------------------------------------------------
AVIATION_EDGE_API_KEY=your_aviation_edge_api_key_here

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Host and port for the API server
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# PostgreSQL Connection Pool Settings
# -----------------------------------------------------------------------------
# Adjust these based on your traffic:
# - LOW traffic: MIN=2, MAX=5
# - MEDIUM traffic: MIN=5, MAX=15  
# - HIGH traffic: MIN=10, MAX=30
PG_POOL_MIN_CONNECTIONS=2
PG_POOL_MAX_CONNECTIONS=10

# Connection timeout in seconds
PG_CONNECT_TIMEOUT=10

# Query timeout in milliseconds
PG_STATEMENT_TIMEOUT=30000
